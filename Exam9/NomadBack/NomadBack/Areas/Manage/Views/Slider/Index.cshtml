@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<a asp-action="Create" asp-controller="Slider" class="btn btn-outline-primary">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Name</th>
            <th>Founder</th>
            <th>Description</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@(count++)</th>
                <td><img width="50px" src="./images/@item.Image" alt="Alternate Text" /> </td>
                <td>@item.Name</td>
                <td>@item.Founder</td>
                <td><a asp-action="Edit" asp-controller="Slider" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
                <td>
                    <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }

    </tbody>
</table>
